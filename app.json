{
  "expo": {
    "name": "AIStudyAssistant",
    "slug": "aistudyassistant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "backgroundColor": "#4F46E5",
      "resizeMode": "contain"
    },
    "scheme": "aistudyassistant",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.aistudyassistant",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to enable voice questions and speech-to-text features.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert your voice into text for asking questions."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#4F46E5"
      },
      "package": "com.yourname.aistudyassistant",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e4615163-65d5-4f61-83a7-43f7a8c02c9a"
      }
    }
  }
}
